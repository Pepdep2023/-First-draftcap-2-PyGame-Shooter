#If keystrock is pressed check weather it is right or left
if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_LEFT:
                playerX_change = playerX_change - 10
                # player(playerX + 10, playerY)
            if event.key == pygame.K_RIGHT:
                playerX_change = playerX_change + 10
